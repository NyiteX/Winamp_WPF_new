<Window x:Class="Winamp_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Winamp_WPF"
        mc:Ignorable="d"
        x:Name="Main" Title="Winamp" Height="690" Width="529" Background="YellowGreen" BorderThickness="0" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid RenderTransformOrigin="0.508,0.372" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="84*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF1C1C2B" Offset="0.826"/>
                <GradientStop Color="#FF383757" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="235*"></RowDefinition>
            <RowDefinition Height="439*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderThickness="3" Margin="37,36,128,117" Background="Black">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
        </Border>
        <Border BorderThickness="3" Margin="14,5,23,10" Grid.Row="1" Grid.ColumnSpan="4">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
        </Border>
        <TextBlock HorizontalAlignment="Left" Margin="225,0,0,0" TextWrapping="Wrap" Text="WINAMP" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Height="16" Width="53" />
        <Button x:Name="X_Button" Content="r" HorizontalContentAlignment="Left" Margin="129,0,15,211" BorderBrush="#00707070" Foreground="#FF978355" Background="#00DDDDDD" FontSize="16" FontWeight="Bold" Padding="0,0,0,0" Click="Button_Click" FontFamily="Marlett" Grid.Column="3"/>
        <Line X1="290" Y1="10" X2="480" Y2="10" StrokeThickness="7" Grid.ColumnSpan="4">
            <Line.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4C587" Offset="1"/>
                    <GradientStop Color="#FF868169" Offset="0"/>
                    <GradientStop Color="#FFF8FBEB" Offset="0.348"/>
                    <GradientStop Color="#FF534018" Offset="0.504"/>
                </LinearGradientBrush>
            </Line.Stroke>
            <Line.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF331717"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Line.Fill>
        </Line>
        <Line X1="290" Y1="10" X2="480" Y2="10" StrokeThickness="7" Margin="-270,0,40,0">
            <Line.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4C587" Offset="1"/>
                    <GradientStop Color="#FF868169" Offset="0"/>
                    <GradientStop Color="#FFF8FBEB" Offset="0.348"/>
                    <GradientStop Color="#FF534018" Offset="0.504"/>
                </LinearGradientBrush>
            </Line.Stroke>
            <Line.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF331717"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Line.Fill>
        </Line>
        <Border BorderThickness="3" Margin="14,20,23,21" Grid.ColumnSpan="4">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
            <ProgressBar x:Name="progress_player" Margin="19,106,19,59" BorderBrush="#FF6E6E8A" Background="#FF202032">
                <ProgressBar.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFBBA08A" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
        </Border>
        <Button Content="7" HorizontalAlignment="Left" Margin="57,139,0,0" VerticalAlignment="Top" Width="28" Height="33" RenderTransformOrigin="-0.188,0.43" FontFamily="Marlett" FontSize="22" Foreground="#FF97A8B9" Background="#FFB9C8D2" BorderBrush="White" Click="Button_Click_1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="||" HorizontalAlignment="Left" Margin="107,159,0,0" VerticalAlignment="Top" Width="32" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Impact" FontSize="22" Background="#FFB9C8D2" Foreground="#FF97A8B9" BorderBrush="#FFF7F6F6" Padding="0,0,0,5" Click="Button_Click_2"/>
        <Button Content="g" HorizontalAlignment="Left" Margin="144,159,0,0" VerticalAlignment="Top" Width="33" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Marlett" FontSize="22" Background="#FFB9C8D2" Foreground="#FF97A8B9" BorderBrush="White" Click="Button_Click_3"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="70,159,0,0" VerticalAlignment="Top" Width="32" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Marlett" FontSize="22" Background="#FFB9C8D2" Foreground="#FF97A8B9" BorderBrush="#FFF7F6F6" Click="play_click"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="201,178,0,0" VerticalAlignment="Top" Width="28" Height="33" RenderTransformOrigin="-0.188,0.43" FontFamily="Marlett" FontSize="22" Foreground="#FF97A8B9" Background="#FFB9C8D2" BorderBrush="White" Click="Button_Click_4">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="268.686"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Line X1="335" Y1="10" X2="470" Y2="10" StrokeThickness="7" Grid.Row="1" Margin="0,10,-1,-10" Grid.ColumnSpan="4">
            <Line.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4C587" Offset="1"/>
                    <GradientStop Color="#FF868169" Offset="0"/>
                    <GradientStop Color="#FFF8FBEB" Offset="0.348"/>
                    <GradientStop Color="#FF534018" Offset="0.504"/>
                </LinearGradientBrush>
            </Line.Stroke>
            <Line.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF331717"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Line.Fill>
        </Line>
        <Line X1="300" Y1="10" X2="440" Y2="10" StrokeThickness="7" Grid.Row="1" Margin="-270,10,40,-10">
            <Line.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4C587" Offset="1"/>
                    <GradientStop Color="#FF868169" Offset="0"/>
                    <GradientStop Color="#FFF8FBEB" Offset="0.348"/>
                    <GradientStop Color="#FF534018" Offset="0.504"/>
                </LinearGradientBrush>
            </Line.Stroke>
            <Line.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF331717"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Line.Fill>
        </Line>

        <MediaElement x:Name="Player" HorizontalAlignment="Left" Height="91" Margin="205,8,0,0" VerticalAlignment="Top" Width="130" Grid.Column="3" LoadedBehavior="Play" UnloadedBehavior="Manual" Visibility="Hidden"/>
        <Slider x:Name="volume_menu" HorizontalAlignment="Left" Margin="183,99,0,0" VerticalAlignment="Top" Width="120" ValueChanged="volume_menu_ValueChanged" Maximum="100" Value="20" ToolTip="{Binding Value, ConverterParameter=int, ElementName=volume_menu}" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Height="18" SmallChange="1" IsSelectionRangeEnabled="True" Grid.ColumnSpan="2">
            <Slider.Resources>
                <LinearGradientBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4C587" Offset="1"/>
                    <GradientStop Color="#FF868169" Offset="0"/>
                    <GradientStop Color="#FFF8FBEB" Offset="0.348"/>
                    <GradientStop Color="#FF534018" Offset="0.504"/>
                </LinearGradientBrush>
                <!--<SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Red" />-->
            </Slider.Resources>
        </Slider>

        <Slider x:Name="balance_menu" HorizontalAlignment="Left" Margin="32,99,0,0" VerticalAlignment="Top" Width="60" ValueChanged="balance_menu_ValueChanged" Maximum="100" ToolTip="{Binding Value, ElementName=balance_menu}" Value="50" Grid.ColumnSpan="3" Height="18" SmallChange="1" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,16,0,0" TextWrapping="Wrap" Text="WINAMP PLAYLIST" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Height="16" Width="112" Grid.Row="1" Grid.ColumnSpan="2" />
        <Border BorderThickness="3" Margin="36,45,48,78" Grid.Row="1" Background="Black" Grid.ColumnSpan="4">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
            <ListBox x:Name="List" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" Foreground="#FF37FF00" MouseDoubleClick="List_MouseDoubleClick"/>
        </Border>
        <Button x:Name="add_pl" Content="Add" HorizontalAlignment="Left" Margin="54,366,0,0" VerticalAlignment="Top" Width="48" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Arial" FontSize="22" Background="#FFB9C8D2" Foreground="#FF97A8B9" BorderBrush="#FFF7F6F6" Click="add_click" Grid.Row="1"/>
        <Button x:Name="del_pl" Content="Rem" HorizontalAlignment="Left" Margin="128,366,0,0" VerticalAlignment="Top" Width="49" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Arial" FontSize="22" Background="#FFB9C8D2" Foreground="#FF97A8B9" BorderBrush="#FFF7F6F6" Click="rem_click" Grid.Row="1"/>
        <Border BorderThickness="3" Margin="183,36,45,169" Background="Black" Grid.ColumnSpan="4">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
            <Label x:Name="songName_label" Content="" Foreground="#FF71FF00" Padding="0,0,0,0" Margin="0,0,0,-8"/>
        </Border>
        <Border BorderThickness="3" Margin="183,69,68,136" Background="Black">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
            <TextBox x:Name="kbps_tb" TextWrapping="Wrap" Text="0" Background="{x:Null}" Foreground="#FF4DFD00" Margin="1,0,1,0"/>
        </Border>
        <Border BorderThickness="3" Margin="252,69,0,136" Background="Black">
            <Border.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF565660" Offset="1"/>
                </RadialGradientBrush>
            </Border.BorderBrush>
            <TextBox x:Name="khz_tb" TextWrapping="Wrap" Text="0" Foreground="#FF4DFD00" Background="{x:Null}"/>
        </Border>
        <Label x:Name="mono_label" Content="mono" HorizontalAlignment="Left" Margin="19,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="45" Height="25" Foreground="White" Grid.Column="3">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="stereo_label" Content="stereo" HorizontalAlignment="Left" Margin="75,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="45" Height="25" Foreground="White" Grid.Column="3">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="khz" HorizontalAlignment="Left" Margin="288,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="46" Height="25" Foreground="White" Grid.ColumnSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="kbps" HorizontalAlignment="Left" Margin="215,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="46" Height="25" Foreground="White">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="time_file_label" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top" Height="74" Width="110" Foreground="#FF7DFF00" FlowDirection="RightToLeft" FontSize="22" Content="00:00" FontFamily="Cascadia Mono SemiLight"/>
        <Button x:Name="plus_time" Content="+10sec" HorizontalAlignment="Left" Margin="0,159,0,0" VerticalAlignment="Top" Width="64" Height="28" RenderTransformOrigin="-0.188,0.43" Background="#FFB9C8D2" Foreground="#FF626262" BorderBrush="White" Click="Forward_Button" FontFamily="Unispace" Grid.Column="3"/>
        <Button x:Name="minus_time" Content="-10sec" HorizontalAlignment="Left" Margin="288,159,0,0" VerticalAlignment="Top" Width="56" Height="28" RenderTransformOrigin="-0.188,0.43" FontFamily="Unispace" Background="#FFB9C8D2" Foreground="#FF5F6163" BorderBrush="White" Click="Rewind_Button" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Column="3"/>
    </Grid>
</Window>
